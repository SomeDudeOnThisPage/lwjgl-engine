#include "filters/filter.h"
#include "shared.h"

#define SPEED 3.5f

in VS_OUT
{
  vec2 uv;
} i;

void main()
{
  if (u_time > 1.0f * SPEED)
  {
    gl_FragColor = vec4(texture2D(u_color, i.uv).rgb, 1.0f);
    return;
  }

  gl_FragColor = vec4(texture2D(u_color, i.uv).rgb * vec3(u_time / SPEED), 1.0f);
}